---
const { title = "AssoSimple", description = "" } = Astro.props;
---
<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}

    <style>
      :root {
        --accent: #2563eb;
      }
      
      body { background: #fffbdd !important; }


      /* Base */
      body {
        margin: 0;
        font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif;
        line-height: 1.6;
        color: #111;
        background: #fff;
      }

      header,
      main,
      footer {
        max-width: 980px;
        margin: 0 auto;
        padding: 18px;
      }

      /* Header / navigation */
      header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-bottom: 1px solid #eee;
      }

      .brand {
        font-weight: 800;
        letter-spacing: 0.2px;
        color: #111;
      }

      nav a {
        margin-left: 12px;
        color: #111;
      }

      nav a:hover {
        color: var(--accent);
        text-decoration: none;
      }

      /* Liens */
      a {
        color: var(--accent);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      /* Boutons */
      .btn {
        display: inline-block;
        padding: 10px 12px;
        border: 1px solid #e5e5e5;
        border-radius: 10px;
        color: #111;
      }

      .btn:hover {
        border-color: #cfcfcf;
        text-decoration: none;
      }

      .btn.primary {
        background: var(--accent);
        color: #fff;
        border-color: var(--accent);
      }

      /* Hero */
      .hero {
        padding: 48px 0 32px;
      }

      .hero h1 {
        font-size: 42px;
        line-height: 1.2;
        letter-spacing: -0.5px;
        margin-bottom: 16px;
      }

      .hero-text {
        max-width: 640px;
        font-size: 18px;
        color: #444;
        margin-bottom: 24px;
      }

      .hero-actions {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
      }

      /* Séparateur */
      hr {
        border: none;
        border-top: 1px solid #eee;
        margin: 48px 0;
      }

      /* À propos */
      .about {
        max-width: 720px;
      }

      .about h2 {
        font-size: 26px;
        margin-bottom: 12px;
      }

      .about p {
        color: #444;
      }

      /* Footer */
      footer {
        border-top: 1px solid #eee;
        color: #666;
        font-size: 14px;
      }
    </style>
  </head>

  <body>
    <header>
      <a class="brand" href="/">AssoSimple</a>
      <nav>
        <a href="/blog/">Blog</a>
        <a href="/contact/">Contact</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      © {new Date().getFullYear()} AssoSimple — numérique simple pour associations.
    </footer>
  </body>
</html>
